@model project109.Models.UsersAdmins
@{
    ViewBag.Title = "fogetpass2";
    Layout = "~/Views/Shared/_LayoutNoTemp.cshtml";
}

<script src="~/Scripts/SpryAssets/SpryValidationPassword.js" type="text/javascript"></script>
<script src="~/Scripts/SpryAssets/SpryValidationConfirm.js" type="text/javascript"></script>
<link href="~/Scripts/SpryAssets/SpryValidationPassword.css" rel="stylesheet" type="text/css">
<link href="~/Scripts/SpryAssets/SpryValidationConfirm.css" rel="stylesheet" type="text/css">
<h2 align="left">Password Change</h2>

<form name="form1" method="post" action="">
  <table width="200" border="1" align="center" cellpadding="0" cellspacing="0">
        <tr>
            <td align="left" nowrap="nowrap">New Password</td>
            <td align="left" nowrap="nowrap">
                <span id="sprypassword1">
                    <input type="password" name="txtpswrd" id="txtpswrd">
                    <span class="passwordRequiredMsg">Required</span><span class="passwordMinCharsMsg">Atleast 8 characters and contain numbers and letters</span><span class="passwordInvalidStrengthMsg">Atleast 8 characters and contain numbers and letters</span>
                </span>
            </td>
           
        </tr>
        <tr>
        <td nowrap="nowrap" align="left">Confirm New Password</td>
            <td nowrap="nowrap" align="left">
                <span id="spryconfirm1">
                    <input type="password" name="txtpswrd2" id="txtpswrd2">
                    <span class="confirmRequiredMsg">Required</span><span class="confirmInvalidMsg">Not Similar</span>
                </span>
            </td>
            
        </tr>@Html.HiddenFor(model => model.Id)
        <tr>
            @Html.HiddenFor(model => model.ConfirmPassword)
        <td nowrap="nowrap" align="left"><input name="hidid" type="hidden" id="hidid" value="@ViewBag.hid"></td>
        <td nowrap="nowrap" align="left"><input type="submit" name="button" id="button" value="Update Password"></td>
    </tr>
</table>
</form>
<script type="text/javascript">
var sprypassword1 = new Spry.Widget.ValidationPassword("sprypassword1", {validateOn:["blur"], minChars:8, minAlphaChars:1, minNumbers:1});
var spryconfirm1 = new Spry.Widget.ValidationConfirm("spryconfirm1", "txtpswrd", {validateOn:["blur"]});
</script>