</script>
@{  string ahref; string isrc; purgurl txt = new purgurl();}
<h4 align="center"><a>Latest Books Added</a></h4>
<table width="100%" border="1" align="center" cellpadding="0" cellspacing="0">
    <tr>
        <td width="100%">
            <table width="100%" border="0" align="center" cellpadding="0" cellspacing="5">

                <tr>
                    <td align="center">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="carousel slide" id="carousel-220249" style="background-color:#5085B3;">
                                    <ol class="carousel-indicators" style="bottom:-10px;">
                                        @{int x = 0; string actv = ""; string actv2 = ""; string logo = "";}
                                        @foreach (var item in Model)
                                        {
                                            if (x == 0) { actv = "class=active"; } else { actv = ""; }
                                            <li data-slide-to="@x" data-target="#carousel-220249" @Html.Raw(actv)>
                                            </li>
                                            x = x + 1;
                                        }


                                    </ol>
                                    <div class="carousel-inner" role="listbox" style="width:100%; height:300px !important;">
                                        @{int y = 0; }
                                        @foreach (var item2 in Model)
                                        {
                                            if (y == 0) { actv2 = "class=item active"; } else { actv2 = "class=item"; }
                                            if (item2.book_cover == null) { logo = "bookthumb.jpg"; } else { logo = item2.book_cover; }
                                            <div @Html.Raw(actv2) style="top:-20px;">

                                                <br> <br>


                                                @{
                                                    ahref = "/books/Details/" + item2.Id;
                                                    isrc = "/Content/images/Covers/" + logo;

                                                }
                                               
                                                <a href="@Html.Raw(ahref)">
                                                    <img src="@Html.Raw(isrc)" style="max-width:500px;height:auto;top:100px;max-height:200px;" />
                                                    <div class="carousel-caption" style="top:200px;"><br>
                                                        <h4>
                                                            <font style="font-size:12px;font-weight:normal;">
                                                                @item2.book_Title
                                                            </font>
                                                        </h4>


                                                    </div>
                                                </a>
                                            </div>
                                            y = y + 1;
                                        }


                                    </div> <a class="left carousel-control" href="#carousel-220249" data-slide="prev"><span class="glyphicon glyphicon-chevron-left" style="left:10px;"><font size="5" color="#000">@*&lsaquo;*@</font></span></a> <a class="right carousel-control" href="#carousel-220249" data-slide="next"><span class="glyphicon glyphicon-chevron-right" style="left:40px;"><font size="5" color="#000">@*&rsaquo;*@</font></span></a>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>

            </table>
        </td>
    </tr>
</table>