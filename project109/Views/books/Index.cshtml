@model IEnumerable<project109.Models.view_books>

@{
    ViewBag.Title = "Index";
}

<h2>Control Panel</h2>

<p>
    @Html.ActionLink("Add New Book", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.book_Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cat_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.author_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RealName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publisher_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publishing_year)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.stock)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.book_cover)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_softcopy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_insert)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.last_update)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.book_Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cat_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.author_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RealName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.publisher_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.publishing_year)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.stock)
        </td>*@
        <td>
            @*@Html.DisplayFor(modelItem => item.book_cover)*@
            @{if (item.book_cover != null)
                {<img src="~/Content/images/Covers/@item.book_cover" style="max-width:30px;" /> }
                else
                { <img src="~/Content/images/Covers/bookthumb.jpg" style="max-width:30px;" />}
            }
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.book_softcopy)*@
            @{if (item.book_softcopy != null)
                {<p><a href="~/Content/images/Docs/@item.book_softcopy" target="_blank">Download</a></p> }
                else
                { <p>Not Available</p>}
            }
        </td>
       
        
        <td>
            @Html.DisplayFor(modelItem => item.book_language)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.date_insert)*@
            @{var x = Convert.ToDateTime(item.date_insert).ToShortDateString(); }
            @Html.Raw(x)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.last_update)*@
            @{var y = Convert.ToDateTime(item.last_update).ToShortDateString(); }
            @Html.Raw(y)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.active)*@
           
            @{  if (item.active == true)
                {<p>Active</p>}
                else
                {<p>Not Active</p>}}
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
